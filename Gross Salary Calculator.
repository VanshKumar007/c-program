#include <stdio.h>

int main() {
    int basic;
    float hra, da, gross;

    scanf("%d", &basic);

    if (basic <= 10000) {
        hra = 0.20 * basic;
        da = 0.30 * basic;
    } else if (basic <= 20000) {
        hra = 0.25 * basic;
        da = 0.40 * basic;
    } else {
        hra = 0.30 * basic;
        da = 0.50 * basic;
    }

    gross = basic + hra + da;

    printf("%.2f", gross);

    return 0;
}
