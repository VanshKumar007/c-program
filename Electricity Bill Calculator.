#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int u;
    scanf("%d", &u);
    float bill=0;

    if(u<=50) bill=u*0.50;
    else if(u<=150) bill=50*0.50+(u-50)*0.75;
    else if(u<=250) bill=50*0.50+100*0.75+(u-150)*1.20;
    else bill=50*0.50+100*0.75+100*1.20+(u-250)*1.50;

    bill = bill+ (bill*0.20);  
    printf("%.2f", bill);
    return 0;
}
