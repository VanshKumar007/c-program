#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    if (scanf("%d", &n) != 1) return 0;

    for (int i = 1; i <= n; i++) {
        // print leading gaps (each gap = two spaces, because stars are printed as "* ")
        for (int s = 0; s < n - i; s++) {
            printf("  ");
        }
        // print stars: (2*i - 1) stars, each followed by a space
        for (int j = 0; j < 2 * i - 1; j++) {
            printf("* ");
        }
        // newline after each row
        printf("\n");
    }

    return 0;
}
