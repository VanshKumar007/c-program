#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    for(int i = 1; i <= n; i++) {
        // Pehle spaces print karo
        for(int j = 1; j <= n - i; j++) {
            printf("  "); // Do spaces (kyunki har star ke baad bhi ek space hai)
        }
        // Fir stars print karo
        for(int k = 1; k <= i; k++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}
